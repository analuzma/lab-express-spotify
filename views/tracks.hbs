
<title>Tracks</title>
<table class="uk-table uk-table-hover uk-table-divider uk-table-striped">
  <thead>
    <tr>
      <th class="uk-heading-medium uk-secondary uk-text-bold uk-text-warning">Title</th>
      <th class="uk-heading-medium uk-secondary uk-text-bold uk-text-warning">Listen</th>

    </tr>
  </thead>
  <tbody>
    {{#each tracks}}
      <tr>
        <td>{{name}}</td>
        <td>
          {{#if preview_url}}
            <audio controls>
    <source src="{{preview_url}}">
</audio>
          {{else}}
            No Hay preview
          {{/if}}
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>